<template name="menuBar">
  <view class="menuBar">
    <view class="menuBarItem" hover-class="menuBarItem-hover" bindtap="switchPageTo" data-url="../gallery/gallery">
      <image src="../../images/browse.png" class="menuBarItemImage"/>
      <view class="highlightBar" hidden="{{currentPage !== 'gallery'}}"/>
    </view>
    <view class="menuBarItem" hover-class="menuBarItem-hover" bindtap="switchPageTo" data-url="../search/search">
      <image src="../../images/search.png" class="menuBarItemImage"/>
      <view class="highlightBar" hidden="{{currentPage !== 'search'}}"/>
    </view>
    <view class="menuBarItem" hover-class="menuBarItem-hover" bindtap="switchPageTo" data-url="../favorite/favorite">
      <image src="../../images/favorite.png" class="menuBarItemImage"/>
      <view class="highlightBar" hidden="{{currentPage !== 'favorite'}}"/>
    </view>
    <view class="menuBarItem" hover-class="menuBarItem-hover" bindtap="switchPageTo" data-url="../him/him">
      <image src="../../images/him.png" class="menuBarItemImage"/>
      <view class="highlightBar" hidden="{{currentPage !== 'him'}}"/>
    </view>
  </view>
</template>