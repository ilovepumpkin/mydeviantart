<view>
    <view>
        <scroll-view scroll-y="true" class="scrollView" style="height:{{winHeight-150}}px;width:100%;">
            <view class="{{item.username==currentUser?'current':'notCurrent'}} authorLine"  wx:key="{{item.username}}" wx:for="{{authors}}" data-username="{{item.username}}" bindtouchend="onTouchEnd" bindtouchstart="onTouchStart" bindtap="onTouchTap" >
                <view class="author">
                        <image src="{{item.usericon}}" class="photo"/>
                        <view class="info">
                            <view class="realName">{{item.real_name}}</view>
                            <view class="userName">{{item.username}}</view>
                        </view>
                </view>
                <view class="delete" data-username="{{item.username}}" bindtap="onDeleteAuthor">
                    <image src="../../images/bin.png" class="deleteIcon" hidden="{{item.username==currentUser}}"/>
                </view>
            </view>
        </scroll-view>
        <view class="editArea">
            <view class="buttonsPanel" hidden="{{isEdit}}">
		    <button class="btn" type="primary" size="mini" bindtap="startEdit">添加</button>
            </view>
            <view class="editUser" hidden="{{!isEdit}}">
                <input class="inputField" value="{{username}}" bindinput="onUsernameInput"/>
            </view>
            <view class="saveButton" hidden="{{!isEdit}}">
                <view style="width:150px" class="saveButton">
                <button class="btn,btn-secondary" size="mini" bindtap="cancelChangeUser">取消</button>
                <button class="btn" type="primary" size="mini" bindtap="saveUser">保存</button>
                </view>
            </view>
        </view>
    </view>
</view>
