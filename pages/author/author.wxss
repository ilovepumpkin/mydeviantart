@import '../../components/searchBar/searchBar.wxss'

.realName{
	color: #000000;
	font-weight: bold;
}

.userName{
	color:gray;
	margin-top: 3px;
}

.author{
	display: flex;
	justify-content: flex-start;
	position: absolute;
	width:100%;
	background-color: #ffffff;
	height:60px;
}

.photo{
	width:50px;
	height:50px;
	margin: 5px;
	border-radius: 25px;
	border:1px solid gray;
}

.info{
	display:flex;
flex-direction:column;
justify-content:center;
	margin-left: 10px;
}

.deleteIcon{
	width:20px;
	height:20px;
}

.authorLine{
	position: relative;
	display: flex;
	justify-content: flex-end;
	border-style:solid;
	border-width:0 0 1px 5px;
	border-bottom-color: lightgray;
}

.current{
	border-left-color: #00ba00;
}

.notCurrent{
	border-left-color:#ffffff;
}

.delete{
	width: 60px;
	height:60px;
	background-color: #e6413d;
	display: flex;
	align-items: center;
	justify-content: center;
	color:#fff;
}

.viewDetail{
	width: 60px;
	height:60px;
	background-color:#cdcdcd;
	display: flex;
	align-items: center;
	justify-content: center;
	color:#fff;
}

.editArea{
	position: fixed;
	width:100%;
	background-color: #333333;
	padding-top: 20px;
	padding-bottom: 20px;
	bottom:0px;
	z-index: 9999;
}

.buttonsPanel{
	display: flex;
	justify-content: flex-end;
}

.inputField{
	background-color: #ffffff;
	margin-bottom: 10px;
	text-align: center;
	height:30px;
}

.editUser{
	display: flex;
	align-items: center;
	justify-content: center;
}

.saveButton{
	display: flex;
	align-items: center;
	justify-content: center;
}

.btn{
	text-shadow:1px 1px 1px #000;
	color:#fff;
}

.btn-secondary{
	color: #00ba00;
}

.add{
	display: flex;
	justify-content: center;
	align-items: center;
	height:40px;
	width:40px;
	background-color: #00ba00;
	border-radius: 30px;
	filter:drop-shadow(5px 5px 10px gray);
	z-index: 9999;
}

.addIcon{
	height:30px;
	width:30px;
}

.mask{
	position: fixed;
	left: 0;
	top:0;
	width:100%;
	height:100%;
	background-color: #333333;
	opacity: 0.5;
	z-index: 8000;
}

.scrollView{
	position: absolute;
	top:80rpx;
}

.movableArea{
	position: absolute;
	top:80rpx;
}


