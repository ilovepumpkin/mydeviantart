<view>
  <scroll-view scroll-y="true" style="height:{{scrollH}}px" bindscrolltolower="loadImages" class="imageScrollView">
    <view style="width:100%">
      <view class="img_item">
        <view wx:for="{{col1}}" wx:key="id" class="imageWrapper" style="width:100%;height:{{item.height}}px" >
          <image src="{{item.pic}}" style="width:100%;height:{{item.height}}px" id="{{item.id}}" bindtap="showBigView"></image>
        </view>
      </view>
      <view class="img_item">
        <view wx:for="{{col2}}" wx:key="id" class="imageWrapper" style="width:100%;height:{{item.height}}px" >
          <image src="{{item.pic}}" style="width:100%;height:{{item.height}}px" id="{{item.id}}" bindtap="showBigView"></image>
        </view>
      </view>
    </view>
  </scroll-view>
  <loading hidden="{{!isLoading}}">正在加载</loading>
</view>
